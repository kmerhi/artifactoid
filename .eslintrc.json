{
  "env": {
    "es6": true,
    "jest": true,
    "node": true,
    "browser": true,
    "jquery": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "jest"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "indent": ["warn", "tab", {
        "SwitchCase": 1
      }
    ],
    "quotes": ["warn", "single", {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "semi": ["error", "always"],
    "keyword-spacing": ["error", { "before": true }],
    "space-before-blocks": "error",
    "no-unused-vars": ["warn", {
        "vars": "local",
        "args": "after-used"
      }
    ],
    "react/prop-types": ["warn"]
  },
  "installedESLint": true
}
