{
  "env": {
    "es6": true,
    "node": true,
    "browser": false
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "no-console": 0,
    "indent": ["warn", "tab", {
        "SwitchCase": 1
      }
    ],
    "quotes": ["warn", "single", {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "semi": ["error", "always"],
    "keyword-spacing": ["error", { "before": true }],
    "space-before-blocks": "error",
    "no-unused-vars": ["warn", {
        "vars": "local",
        "args": "after-used"
      }
    ]
  },
  "installedESLint": true
}
